<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/L"
    android:layout_marginTop="@dimen/S"
    android:layout_marginEnd="@dimen/L">

    <ImageView
        android:id="@+id/categoryImage"
        android:layout_width="@dimen/category_image_size"
        android:layout_height="@dimen/category_image_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_avatar" />

    <TextView
        android:id="@+id/category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/S"
        app:layout_constraintBottom_toBottomOf="@id/categoryImage"
        app:layout_constraintEnd_toStartOf="@id/selectCategory"
        app:layout_constraintStart_toEndOf="@id/categoryImage"
        app:layout_constraintTop_toTopOf="@id/categoryImage"
        tools:text="category name" />

    <CheckBox
        android:id="@+id/selectCategory"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:checked="true"
        app:layout_constraintBottom_toBottomOf="@id/categoryImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/categoryImage" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/S"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/categoryImage"
        app:layout_constraintTop_toBottomOf="@id/categoryImage" />

</androidx.constraintlayout.widget.ConstraintLayout>